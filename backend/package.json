{
  "name": "vision-crm-backend",
  "version": "1.0.0",
  "description": "Backend API for Vision CRM",
  "main": "dist/index.js",
  "scripts": {
    "setup": "node setup.js",
    "setup:reset": "node setup.js --reset",
    "setup:migrate": "node setup.js --migrate", 
    "setup:seed": "node setup.js --seed",
    "dev": "nodemon src/index.ts",
    "dev:reset": "node reset-dev.js && npm run dev",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "@prisma/client": "^6.15.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.19",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.1",
    "nodemon": "^3.1.10",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}